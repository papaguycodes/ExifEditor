<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.YourApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary theme color -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/onPrimaryColor</item>
        <!-- Secondary theme color -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/onSecondaryColor</item>
        <!-- Background color -->
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <!-- Font family -->
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Theme.YourApp.Light" parent="Theme.MaterialComponents.Light">
        <!-- Same items as above, with light theme colors -->
    </style>

    <style name="Theme.YourApp.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Same items as above, with dark theme colors -->
    </style> 
</resources>
